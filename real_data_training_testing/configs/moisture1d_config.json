{
  "pde_type": "moisture1d",
  "equation": "dX/dt = D * d^2X/dz^2",
  "domain": {
    "z": [0.0, 1.0],
    "nz": 101,
    "t": [0.0, 1.0],
    "nt": 400
  },
  "parameters": {
    "D": {
      "low": 0.05,
      "high": 0.2,
      "description": "Diffusion coefficient"
    },
    "h": {
      "low": 0.5,
      "high": 2.0,
      "description": "Robin BC coefficient"
    },
    "X_env": {
      "low": 0.1,
      "high": 0.3,
      "description": "Environmental moisture concentration"
    },
    "X0": {
      "low": 0.8,
      "high": 1.2,
      "description": "Initial moisture concentration"
    }
  },
  "boundary_conditions": {
    "type": "robin",
    "left": {
      "h": "h",
      "X_env": "X_env"
    },
    "right": {
      "h": "h",
      "X_env": "X_env"
    }
  },
  "dataset": {
    "num_samples": 100,
    "seed": 42
  }
}

