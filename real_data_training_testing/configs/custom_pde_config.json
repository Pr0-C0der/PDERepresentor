{
    "pde_type": "custom_pde",
    "equation": "du/dt = -a * du/dx + nu * d^2u/dx^2 + lambda * sin(t) * u",
    "domain": {
        "x": [
            0.0,
            1.0
        ],
        "nx": 201,
        "t": [
            0.0,
            1.0
        ],
        "nt": 500
    },
    "parameters": {
        "a": {
            "low": 0.5,
            "high": 2.0,
            "description": "Advection speed"
        },
        "nu": {
            "low": 0.01,
            "high": 0.1,
            "description": "Diffusion coefficient"
        },
        "lam": {
            "low": 0.2,
            "high": 1.0,
            "description": "Reaction coefficient multiplier"
        }
    },
    "initial_condition": {
        "type": "function",
        "expr": "np.exp(-50.0 * (x - 0.5)**2)"
    },
    "boundary_conditions": {
        "type": "dirichlet",
        "left": 0.0,
        "right": 0.0
    },
    "dataset": {
        "num_samples": 100,
        "seed": 42
    }
}