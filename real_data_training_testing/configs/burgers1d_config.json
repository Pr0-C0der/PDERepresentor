{
  "pde_type": "burgers1d",
  "equation": "du/dt = -u * du/dx + nu * d^2u/dx^2",
  "domain": {
    "x": [0.0, 6.283185307179586],
    "nx": 100,
    "t": [0.0, 0.1],
    "nt": 100
  },
  "parameters": {
    "nu": {
      "low": 0.05,
      "high": 0.2,
      "description": "Viscosity coefficient"
    }
  },
  "initial_condition": {
    "type": "function",
    "expr": "np.sin(x)"
  },
  "boundary_conditions": {
    "type": "periodic"
  },
  "dataset": {
    "num_samples": 100,
    "seed": 42
  }
}

