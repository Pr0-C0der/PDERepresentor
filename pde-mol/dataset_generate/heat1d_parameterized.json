{
  "domain": {
    "type": "1d",
    "x0": 0.0,
    "x1": 6.283185307179586,
    "nx": 101,
    "periodic": true
  },
  "initial_condition": {
    "type": "expression",
    "expr": "A0 * np.sin(x)"
  },
  "boundary_conditions": {
    "left": {
      "type": "periodic"
    },
    "right": {
      "type": "periodic"
    }
  },
  "operators": [
    {
      "type": "diffusion",
      "nu": "H"
    }
  ],
  "time": {
    "t0": 0.0,
    "t1": 1.0,
    "num_points": 50,
    "method": "RK45",
    "rtol": 1e-6,
    "atol": 1e-8
  },
  "dataset": {
    "enabled": true,
    "num_samples": 50,
    "parameters": {
      "H": [
        0.1,
        1.0
      ],
      "A0": [
        0.5,
        2.0
      ]
    },
    "savepath": "data/heat1d_dataset.pt",
    "seed": 42,
    "save_heatmaps": true
  }
}