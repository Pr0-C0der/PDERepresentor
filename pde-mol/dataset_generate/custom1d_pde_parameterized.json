{
  "domain": {
    "type": "1d",
    "x0": 0.0,
    "x1": 1.0,
    "nx": 101,
    "periodic": false
  },
  "initial_condition": {
    "type": "expression",
    "expr": "np.exp(-sigma * (x - 0.5)**2)"
  },
  "boundary_conditions": {
    "left": {
      "type": "dirichlet",
      "value": 0.0
    },
    "right": {
      "type": "dirichlet",
      "value": 0.0
    }
  },
  "operators": [
    {
      "type": "expression",
      "expr": "-a_param*ux + nu_param*uxx + lam_param*sin(t)*u",
      "params": {
        "a_param": "a",
        "nu_param": "nu",
        "lam_param": "lam"
      }
    }
  ],
  "time": {
    "t0": 0.0,
    "t1": 1.0,
    "num_points": 50,
    "method": "RK45",
    "rtol": 1e-6,
    "atol": 1e-8
  },
  "dataset": {
    "enabled": true,
    "num_samples": 50,
    "parameters": {
      "a": [0.5, 2.0],
      "nu": [0.01, 0.1],
      "lam": [0.2, 1.0],
      "sigma": [30.0, 70.0]
    },
    "savepath": "data/custom1d_pde_dataset.pt",
    "seed": 42
  }
}

