{
  "domain": {
    "type": "1d",
    "x0": 0.0,
    "x1": 1.0,
    "nx": 101,
    "periodic": false
  },
  "initial_condition": {
    "type": "expression",
    "expr": "A0 * np.sin(np.pi * x)"
  },
  "boundary_conditions": {
    "left": {
      "type": "robin",
      "a": "a_left",
      "b": "b_left",
      "c": "c_left"
    },
    "right": {
      "type": "robin",
      "a": "a_right",
      "b": "b_right",
      "c_expr": "c_right * np.sin(t)"
    }
  },
  "operators": [
    {
      "type": "diffusion",
      "nu": "D"
    }
  ],
  "time": {
    "t0": 0.0,
    "t1": 1.0,
    "num_points": 50,
    "method": "RK45",
    "rtol": 1e-6,
    "atol": 1e-8
  },
  "dataset": {
    "enabled": true,
    "num_samples": 50,
    "parameters": {
      "D": [0.05, 0.2],
      "A0": [0.5, 2.0],
      "a_left": [1.0, 3.0],
      "b_left": [2.0, 4.0],
      "c_left": [3.0, 7.0],
      "a_right": [0.5, 2.0],
      "b_right": [0.5, 2.0],
      "c_right": [0.5, 2.0]
    },
    "savepath": "data/robin_general_example_dataset.pt",
    "seed": 42
  }
}

