{
  "domain": {
    "type": "2d",
    "x0": 0.0,
    "x1": 10.0,
    "nx": 51,
    "y0": 0.0,
    "y1": 10.0,
    "ny": 51,
    "periodic_x": true,
    "periodic_y": true
  },
  "initial_condition": {
    "type": "expression",
    "expr": "np.exp(-((x - x0)**2 + (y - y0)**2) / (2.0 * sigma**2))"
  },
  "boundary_conditions": {
    "left": {
      "type": "periodic"
    },
    "right": {
      "type": "periodic"
    }
  },
  "operators": [
    {
      "type": "expression2d",
      "expr": "D*(uxx + uyy) + r*u*(1 - u)",
      "params": {
        "D": "D",
        "r": "r"
      }
    }
  ],
  "time": {
    "t0": 0.0,
    "t1": 2.0,
    "num_points": 50,
    "method": "RK45",
    "rtol": 1e-6,
    "atol": 1e-8
  },
  "dataset": {
    "enabled": true,
    "num_samples": 30,
    "parameters": {
      "D": [0.05, 0.2],
      "r": [0.5, 2.0],
      "x0": [4.0, 6.0],
      "y0": [4.0, 6.0],
      "sigma": [0.8, 1.5]
    },
    "savepath": "data/reaction_diffusion2d_dataset.pt",
    "seed": 42
  }
}

