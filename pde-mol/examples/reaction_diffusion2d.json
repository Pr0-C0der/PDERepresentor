{
  "domain": {
    "type": "2d",
    "x0": 0.0,
    "x1": 10.0,
    "nx": 100,
    "y0": 0.0,
    "y1": 10.0,
    "ny": 100,
    "periodic_x": true,
    "periodic_y": true
  },
  "initial_condition": {
    "type": "expression",
    "expr": "np.exp(-((x - 5.0)**2 + (y - 5.0)**2) / 2.0)"
  },
  "boundary_conditions": {
    "left": {
      "type": "periodic"
    },
    "right": {
      "type": "periodic"
    }
  },
  "operators": [
    {
      "type": "expression",
      "expr": "D*(uxx + uyy) + r*u*(1 - u)",
      "params": {
        "D": 0.1,
        "r": 1.0
      }
    }
  ],
  "time": {
    "t0": 0.0,
    "t1": 2.0,
    "num_points": 100,
    "method": "RK45",
    "rtol": 1e-6,
    "atol": 1e-8
  },
  "visualization": {
    "enable": true,
    "type": "2d",
    "save_dir": "reaction_diffusion2d",
    "plot_initial": true,
    "plot_final": true,
    "plot_time_series": true
  }
}

