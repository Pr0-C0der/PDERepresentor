{
    "domain": {
        "type": "1d",
        "x0": 0.0,
        "x1": 1.0,
        "nx": 101,
        "periodic": false
    },
    "initial_condition": {
        "type": "expression",
        "expr": "np.sin(np.pi * x)"
    },
    "boundary_conditions": {
        "left": {
            "type": "robin",
            "a": 2.0,
            "b": 3.0,
            "c": 5.0
        },
        "right": {
            "type": "robin",
            "a": 1.0,
            "b": 1.0,
            "c_expr": "np.sin(t)"
        }
    },
    "operators": [
        {
            "type": "diffusion",
            "nu": 0.1,
            "scheme": "central"
        }
    ],
    "time": {
        "t0": 0.0,
        "t1": 1.0,
        "num_points": 100,
        "method": "RK45",
        "rtol": 1e-6,
        "atol": 1e-8
    },
    "visualization": {
        "enable": true,
        "type": "1d",
        "save_dir": "robin_general_example"
    }
}