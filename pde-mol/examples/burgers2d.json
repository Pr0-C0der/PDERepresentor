{
  "domain": {
    "type": "2d",
    "x0": 0.0,
    "x1": 6.283185307179586,
    "nx": 100,
    "y0": 0.0,
    "y1": 6.283185307179586,
    "ny": 100,
    "periodic_x": true,
    "periodic_y": true
  },
  "initial_condition": {
    "type": "expression",
    "expr": "np.sin(x) * np.sin(y)"
  },
  "boundary_conditions": {
    "left": {
      "type": "periodic"
    },
    "right": {
      "type": "periodic"
    }
  },
  "operators": [
    {
      "type": "expression",
      "expr": "-u*ux - u*uy + nu*(uxx + uyy)",
      "params": {
        "nu": 0.1
      }
    }
  ],
  "time": {
    "t0": 0.0,
    "t1": 0.1,
    "num_points": 50,
    "method": "RK45",
    "rtol": 1e-6,
    "atol": 1e-8
  },
  "visualization": {
    "enable": true,
    "type": "2d",
    "save_dir": "burgers2d",
    "plot_initial": true,
    "plot_final": true,
    "plot_time_series": true
  }
}

