{
    "domain": {
        "type": "2d",
        "x0": 0.0,
        "x1": 4.0,
        "nx": 80,
        "y0": 0.0,
        "y1": 4.0,
        "ny": 80,
        "periodic_x": false,
        "periodic_y": false
    },
    "initial_condition": {
        "type": "expression",
        "expr": "np.exp(-2.0*((x - 2.0)**2 + (y - 2.0)**2))"
    },
    "boundary_conditions": {
        "left": {
            "type": "dirichlet",
            "value": 0.0
        },
        "right": {
            "type": "dirichlet",
            "value": 0.0
        }
    },
    "operators": [
        {
            "type": "expression",
            "expr": "nu*(uxx + uyy) - a_x*ux - a_y*uy + lam*sin(t)*u",
            "params": {
                "nu": 0.05,
                "a_x": 0.5,
                "a_y": 0.5,
                "lam": 0.3
            }
        }
    ],
    "time": {
        "t0": 0.0,
        "t1": 1.0,
        "num_points": 100,
        "method": "RK45",
        "rtol": 1e-6,
        "atol": 1e-8
    },
    "visualization": {
        "enable": true,
        "type": "2d",
        "save_dir": "custom2d_pde",
        "plot_initial": true,
        "plot_final": true,
        "plot_time_series": true
    }
}