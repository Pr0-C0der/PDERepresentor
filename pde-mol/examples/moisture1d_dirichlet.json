{
    "domain": {
        "type": "1d",
        "x0": 0.0,
        "x1": 1.0,
        "nx": 1000,
        "periodic": false
    },
    "initial_condition": {
        "type": "expression",
        "expr": "np.ones_like(x)"
    },
    "boundary_conditions": {
        "left": {
            "type": "dirichlet",
            "value": 0.2
        },
        "right": {
            "type": "dirichlet",
            "value": 0.2
        }
    },
    "operators": [
        {
            "type": "diffusion",
            "nu": 0.1,
            "scheme": "central"
        }
    ],
    "time": {
        "t0": 0.0,
        "t1": 1.0,
        "num_points": 1000,
        "method": "RK45",
        "rtol": 1e-6,
        "atol": 1e-8
    },
    "visualization": {
        "enable": true,
        "type": "1d",
        "save_dir": "moisture_diffusion_dirichlet"
    }
}